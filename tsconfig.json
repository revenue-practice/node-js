{
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "module": "NodeNext",
        "target": "ES2022",
        "sourceMap": true,
        "alwaysStrict": true,
        "strictNullChecks": true
    },
    "include": ["./src/**/*", "src/**/**/*.d.ts"],
    "exclude": ["./node_modules", "**/*.spec.ts", "**/**/*.test.spec.ts"]
}
